extends layout

block content
  .w3-card-4
    if plist.length == 0
      header.w3-container.w3-indigo
        h1 Espécie não encontrada
    else
      header.w3-container.w3-indigo
        h1 Espécie #{plist[0].Espécie} | Desginação científica: #{plist[0]["Nome Científico"]}
      .w3-container
        table.w3-table-all
          tr
            th Id
            th Freguesia
            th Espécie
            th Estado
            th Número de intervenções

          each p in plist
            tr
              td
                a(href="/" + p._id) #{p._id}
              td= p.Freguesia
              td
                a(href="/especies/" + p.Espécie) #{p.Espécie}
              td= p.Estado
              td #{p['Número de intervenções']}

    footer.w3-container.w3-indigo
      address Generated by EngWeb in #{d} - #[a(href="/") Voltar]